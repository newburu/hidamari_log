<div class="card">
  <div class="card-header">
    <%= t('.title') %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= l @event.start_time, format: :full_date %></h5>
    <%= simple_format(@event.content, class: "card-text bg-light p-3 rounded") %>
    <hr>
    <%= link_to t('common.edit'), edit_event_path(@event), class: 'btn btn-secondary' %>
    <%= link_to t('common.destroy'), event_path(@event), data: { turbo_method: :delete, turbo_confirm: t('common.destroy_confirm') }, class: 'btn btn-danger' %>
  </div>
</div>

<div class="mt-3">
  <%= link_to t('common.back'), root_path %>
</div>