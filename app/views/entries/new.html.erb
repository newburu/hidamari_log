<% date = @entry_form.start_time %>
<h1><%= date.strftime('%Y年%m月%d日') %> の記録</h1>

<div class="card mt-4">
  <div class="card-body">
    <%= form_with(model: @entry_form, url: entries_path, method: :post) do |form| %>
      <% if @entry_form.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% @entry_form.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.hidden_field :start_time %>

      <%# --- Good & New の入力欄 --- %>
      <div class="mb-3" data-controller="char-counter">
        <div class="d-flex justify-content-between">
          <%= form.label :content, 'Good & New', class: 'form-label fw-bold' %>
          <p class="form-text" data-char-counter-target="output"></p>
        </div>
        <%= form.text_area :content,
              rows: 5,
              class: 'form-control',
              placeholder: '今日あった良いことや、新しい発見を記録しましょう',
              data: {
                action: 'input->char-counter#count',
                'char-counter-target': 'input'
              }
        %>
      </div>

      <%# --- 目標の入力欄 --- %>
      <div class="mb-3">
        <%= form.label :title, '目標（任意）', class: 'form-label fw-bold' %>
        <%= form.text_field :title, class: 'form-control', placeholder: 'この日に達成したい目標があれば入力' %>
      </div>

      <div class="d-flex align-items-center gap-3">
        <%= form.submit "まとめて登録する", class: 'btn btn-primary' %>
        <%= link_to 'カレンダーに戻る', root_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>