<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card">
      <div class="card-header">
        <h1 class="h4 mb-0"><%= t('.title') %></h1>
      </div>
      <div class="card-body">
        <%# バリデーションエラーの表示エリア %>
        <% if @goal.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @goal.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with(model: @goal, local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :title, class: 'form-label' %>
            <%= form.text_field :title, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= form.label :start_time, class: 'form-label' %>
            <%= form.date_field :start_time, class: 'form-control' %>
          </div>

          <div class="d-flex align-items-center gap-3">
            <%= form.submit t('common.regist'), class: 'btn btn-primary' %>
            <%= link_to t('common.back'), root_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>