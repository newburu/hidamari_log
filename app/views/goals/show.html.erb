<div class="card">
  <div class="card-header">
    <%= t('.title') %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= l @goal.start_time, format: :full_date %></h5>
    <%= simple_format(@goal.title, class: "card-text bg-light p-3 rounded") %>
    <hr>
    <%= link_to t('common.edit'), edit_goal_path(@goal), class: 'btn btn-secondary' %>
    <%= link_to t('common.destroy'), goal_path(@goal), data: { turbo_method: :delete, turbo_confirm: t('common.destroy_confirm') }, class: 'btn btn-danger' %>
  </div>
</div>

<div class="mt-3">
  <%= link_to t('common.back'), root_path %>
</div>